<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>State:</strong>
    <%= task.state %>
  </p>

  <p>
    <strong>Deadline:</strong>
    <%= task.deadline %>
  </p>

  <p>
    <strong>Deleted at:</strong>
    <%= task.deleted_at %>
  </p>
   <p>
    <strong>Raised by:</strong>
    <%= task.merge(user_id) %>
  </p>

</div>
